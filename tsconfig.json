{
    "compilerOptions": {
    "target": "ESNext",                  // Современный JS
    "module": "ESNext",
    "jsx": "react-jsx",                  // Для React 17+
    "strict": true,                      // Включает строгий режим
    "esModuleInterop": true,             // Упрощает импорт CommonJS модулей
    "skipLibCheck": true,                // Быстрее компиляция
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,           // Позволяет импортировать JSON
    "isolatedModules": true              // Для поддержки Vite/CRA
  },
  "include": ["src"],                    // Где искать исходники
  "exclude": ["node_modules", "dist"]    // Что исключать
}